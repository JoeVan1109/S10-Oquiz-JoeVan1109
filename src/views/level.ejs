<%- include("partials/header") %>
    
    <main class="container py-4">

        <h1 class="my-3">Editer un niveau</h1>
    
        <form class="mb-5" action="/level/<%= editLevel.id %>/update" method="POST">
        <label class="form-label" for="name">Nom actuel du niveau</label>
        <input class="form-control" type="text" disabled value="<%= editLevel.name %>">
    
        <label class="form-label" for="name">Nouveau nom du niveau</label>
        <input class="form-control" type="text" name="name" id="name" required>
    
        <input class="btn btn-primary mt-3" type="submit" value="Modifier le niveau">
        </form>

        <% if (message) { %>
            <div class="alert alert-info" role="alert">
                <%= message %>
            </div>
        <% } %>

    </main>

<%- include("partials/footer") %>