<%- include("partials/header") %>

  <main class="container py-4">

    <h1 class="text-center m-2">
      <%= quizz.title %>
    </h1>

    <h2 class="text-center m-2">
      <%= quizz.description %>
        </h1>

        <h2 class="small text-end">Par <%= quizz.author.firstname %> <%= quizz.author.lastname %>
        </h2>

        <h2 class="small text-end">Date de création : <%= new Date(quizz.created_at).toLocaleDateString('fr-FR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></h2>

        <h3>Thèmes</h3>

        <ul class="mb-4 p-0">
          <% quizz.tags.forEach(element=> { %>
            <li class="badge bg-primary">
              <%= element.name %>
            </li>
            <% }) %>
        </ul>

        <h3>Questions</h3>


        <% quizz.questions.forEach(question=> { %>
          <a href="/levels" class="badge bg-info">
            <%= question.level.name %>
          </a>
          <p class="fw-bold mb-1">
            <%= question.description %>
          </p>

          <div class="mb-3 ms-2">
            <% question.propositions.forEach(answer=> { %>
              <div>
                <div>
                  <input type="radio" id="<%= answer.id %>" name="<%= question.id %>" value="<%= answer.id %>">
                  <label for="<%= answer.id %>"><%= answer.description %></label>
              </div>
              <% }) %>
          </div>


          <p class="fst-italic text-secondary"><%= question.anecdote %></p>
          <% }) %>


            <button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>

  </main>


  <%- include("partials/footer") %>