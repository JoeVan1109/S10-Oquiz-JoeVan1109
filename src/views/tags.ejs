<%- include("partials/header") %>

  <main class="container py-4">

    <h1>Thèmes</h1>
    <div>
      <% tags.forEach(tag => { %>
        
        
        <span class="badge bg-primary p-2 mb-1"><%= tag.name %></span>
        

          <% if (!tag.quizzes || tag.quizzes.length === 0) { %>

            <p class="ms-2">Aucun quizz dans cette catégorie pour le moment....</p>

          <% } %>

            <ul>
          
              <% tag.quizzes.forEach(element => { %>

                <li><a href="/quiz/<%= element.id %>"><%= element.title %></a></li>

              <% }); %>

          </ul>
  
      <% }) %>
      

    </div>

  </main>

  <%- include("partials/footer") %>